doctype html
html
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    title Request a loan | Parkside Lending
  body
    #app
      .container
        .col-sm-2
        .col-sm-8
          form.form-horizontal(method='post')
            .form-group
              h3.col-sm-4 Request a loan

            hr

            .form-group.has-feedback(class=error.amount ? 'has-error' : void 0)
              label.control-label.col-sm-3(for='amount') Loan amount:
              .col-sm-9
                input#amount.form-control(type='tel', name='amount', value= value.amount)
                if error.amount
                  span.help-block #{error.amount}

            .form-group.has-feedback(class=error.value ? 'has-error' : void 0)
              label.control-label.col-sm-3(for='value') Property value:
              .col-sm-9
                input#value.form-control(type='tel', name='value', value= value.value)
                if error.value
                  span.help-block #{error.value}

            .form-group.has-feedback(class=error.ssn ? 'has-error' : void 0)
              label.control-label.col-sm-3(for='ssn') SSN:
              .col-sm-9
                input#ssn.form-control(type='tel', name='ssn', value= value.ssn)
                if error.ssn
                  span.help-block #{error.ssn}
            
            .form-group.has-feedback
              .col-sm-offset-3.col-sm-9
                button.btn.btn-primary(type='submit') Create loan request
        
        .col-sm-2
  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js" integrity="sha256-+4KHeBj6I8jAKAU8xXRMXXlH+sqCvVCoK5GAFkmb+2I=", crossorigin="anonymous")
    script $(ssn).mask('999-99-9999')